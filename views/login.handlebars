<section class="login-signup-container">
  <div class="loginsignchildcontainer">
    <div class="card text-center mx-auto mt-4 mb-2 w-25 border-0">
      <div class="card-body">
        <h2 class="text-center">Sign In</h2>
        <form class="form login-form ">
          <div class="form-group">
            <label for="email-login"></label>
            <input class="form-input text-center form-control border-light" type="text" placeholder="Email" id="email-login" />
          </div>
          <div class="form-group">
            <label for="password-login"></label>
            <input class="form-input text-center form-control border-light" type="password" placeholder="Password" id="password-login" />
          </div>
          <div class="form-group d-grid">
            <button class="btn marg-sign mt-4 btn-primary" type="submit">Sign In</button>
          </div>
        </form>
      </div>
    </div>
    <div class="card text-center mx-auto mt-4 w-25 border-0">
      <div class="card-body">
        <h2 class="text-center">Sign Up</h2>
        <form class="form signup-form">
          <div class="form-group">
            <label for="name-signup"></label>
            <input class="form-input text-center form-control border-light" type="text" placeholder="Name" id="name-signup" />
          </div>
          <div class="form-group">
            <label for="email-signup"></label>
            <input class="form-input text-center form-control border-light" type="text" placeholder="Email" id="email-signup" />
          </div>
          <div class="form-group">
            <label for="password-signup"></label>
            <input class="form-input text-center form-control border-light" type="password" placeholder="Password" id="password-signup" />
          </div>
          <div class="form-group d-grid">
            <button class="btn marg-sign mt-4 btn-primary " type="submit">Sign Up</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.3.1/jspdf.umd.min.js"></script>
<script src="./js/login.js"></script>